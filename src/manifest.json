{
  "manifest_version": 2,

  "name": "Acheronte",
  "description": "WiFi Strength - Battery Level - Refresh Button visualizer",
  "version": "0.0.1",

  "permissions": [
    "tabs",
    "webRequest",
    "*://*/*"
  ],

  "background": {
    "persistent": true,
    "scripts": ["scripts/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/injector_script.js"],
      "css": ["css/style.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    "html/docker.html"
  ]
}