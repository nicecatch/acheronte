{
  "manifest_version": 2,

  "name": "Full Screen Helper",
  "description": "Battery Level, Refresh Button visualizer, Auto refresher on load error",
  "version": "0.0.4",

  "permissions": [
    "tabs",
    "nativeMessaging",
    "webRequest",
    "*://*/*"
  ],

  "icons": 
  { 
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png" 
  },

  "background": {
    "persistent": true,
    "scripts": [
      "scripts/native_manager.js",
      "scripts/objects_manager.js",
      "scripts/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/injector_script.js"],
      "css": ["css/style.css", "css/font-awesome.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    "html/*",
    "fonts/*"
  ]
}